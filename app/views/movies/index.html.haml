-#  This file is app/views/movies/index.html.haml
%h1 All Movies

-# Enables the checkboxes form
= form_tag movies_path, :method => :get, :id => 'ratings_form' do
  Include:
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]", "1", @selected_rating.include?(rating)
  = submit_tag 'Refresh', :id => 'ratings_submit'

-# Index with sorting
%table#movies
  %thead
    %tr
      %th{ :class => @title_class, :id => 'title_header'}= link_to 'Movie Title', movies_path(sort: 'title')
      %th Rating
      %th{ :class => @release_class, :id => 'realse_date_header'}= link_to 'Release Date', movies_path(sort: 'release') 
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
